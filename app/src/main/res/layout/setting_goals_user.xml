<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How many times do you want to do this habit?"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <NumberPicker
            android:id="@+id/habit_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Do you want reminders?"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />


        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/reminder_switch"
            android:layout_width="48dp"
            android:layout_height="48dp" />

        <LinearLayout
            android:id="@+id/reminder_options_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reminder Time"
                android:textSize="16sp" />

            <TimePicker
                android:id="@+id/time_habit_reminder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:timePickerMode="spinner"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reminder Frequency"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/habit_frequency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/frequency_options"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <Button
            android:id="@+id/save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>
