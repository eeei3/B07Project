<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/planetze_colour_1">

    <ImageView
        android:id="@+id/planetzeLogo"
        android:layout_width="362dp"
        android:layout_height="153dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/trans_planetze_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/logo_desc"/>

    <EditText
        android:id="@+id/txtUserEmail"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:layout_marginTop="100dp"
        android:autofillHints="emailAddress"
        android:background="@color/planetze_colour_2"
        android:ems="10"
        android:hint="@string/enter_email"
        android:inputType="textEmailAddress"
        android:outlineProvider="none"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/planetzeLogo" />

    <EditText
        android:id="@+id/userPassWord"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:background="@color/planetze_colour_2"
        android:ems="10"
        android:hint="@string/enter_pass"
        android:autofillHints="password"
        android:inputType="textPassword"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtUserEmail" />

    <Button
        android:id="@+id/signIn"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:layout_marginTop="50dp"
        android:text="@string/sign_in"
        android:textColor="@color/planetze_colour_1"
        android:background="@drawable/round_button"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userPassWord" />

    <ImageButton
        android:id="@+id/backButtonLogin"
        android:layout_width="90dp"
        android:layout_height="68dp"
        android:background="@android:color/transparent"
        android:src="@drawable/baseline_arrow_back_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="@string/back_btn" />

    <TextView
        android:id="@+id/forgotPassWordLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/forgot_pass"
        android:textColor="#455A64"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signIn" />


</androidx.constraintlayout.widget.ConstraintLayout>