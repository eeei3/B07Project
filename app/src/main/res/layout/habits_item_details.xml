<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Habit Title -->
    <TextView
        android:id="@+id/habit_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Habit Title"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Habit Description -->
    <TextView
        android:id="@+id/habit_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Description of the habit..."
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/habit_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Habit Impact -->
    <TextView
        android:id="@+id/habit_impact"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Impact: High"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/habit_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Adopt and Track Button -->
    <Button
        android:id="@+id/adopt_habit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Adopt and Track"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/habit_impact"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>