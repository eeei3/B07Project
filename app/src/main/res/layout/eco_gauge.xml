<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/entry_page_background">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        tools:ignore="ExtraText">

        <!--Planetze Logo-->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="300dp"
            android:layout_height="93dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/trans_planetze_logo"
            android:layout_gravity="center"/>

        <!--Let's review your progress!-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/garet"
            android:gravity="center"
            android:text="Let's review your progress!"
            android:textSize="24sp"
            tools:ignore="HardcodedText" />

        <!--Spinner and Related Text aligned horizontally-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">
            <TextView
                android:id="@+id/textLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="26dp"
                android:layout_alignBaseline="@id/timeSpinner"
                android:layout_centerVertical="true"
                android:fontFamily="@font/garet"
                android:textSize="16dp"
                android:textStyle="bold"
                android:text="Time Interval:" />
            <Spinner
                android:id="@+id/timeSpinner"
                style="@style/CustomSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="26dp"
                android:layout_toEndOf="@id/textLabel"
                android:background="@drawable/spinner_layout"
                android:entries="@array/timeValues"
                android:spinnerMode="dropdown" />
        </RelativeLayout>

        <!-- Total Emissions Overview -->
        <TextView
            android:id="@+id/totalEmissionsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/garet"
            android:text="Total Emissions:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!--Beginning of CardView containing pie chart and comparison between user's emissions and global emissions-->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            app:cardBackgroundColor="@color/teal_700"
            app:cardCornerRadius="10dp">

            <!-- Parent container to hold all content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="410dp"
                        app:cardCornerRadius="8dp"
                        tools:context=".MainActivity">

                        <!-- Card view for displaying the -->
                        <!-- Pie chart and details of pie chart -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardViewGraph"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:elevation="10dp"
                            app:cardCornerRadius="10dp">

                            <!--Linear layout to display pie chart -->
                            <!-- and details of pie chart-->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <!--Pie chart to display the data-->
                                <org.eazegraph.lib.charts.PieChart xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/piechart"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginBottom="15dp"
                                    android:layout_weight="1"
                                    android:padding="6dp"
                                    />

                                <!--Creating another linear layout -->
                                <!-- to display pie chart details -->
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="20dp"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="18dp"
                                        android:layout_gravity="center_vertical">

                                        <!--View to display the yellow color icon-->
                                        <View
                                            android:layout_width="15dp"
                                            android:layout_height="match_parent"
                                            android:background="@color/purple_700" />

                                        <!--Text view to display R -->
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:id="@+id/shopping"
                                            android:fontFamily="@font/garet"
                                            android:paddingLeft="10dp"
                                            android:text="Shopping" />
                                    </LinearLayout>

                                    <!--Linear layout to display Green-->
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="18dp"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginTop="5dp">

                                        <!--View to display the green color icon-->
                                        <View
                                            android:layout_width="15dp"
                                            android:layout_height="match_parent"
                                            android:background="@color/purple_200" />

                                        <!--Text view to display green text -->
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/garet"
                                            android:id="@+id/transportation"
                                            android:paddingLeft="10dp"
                                            android:text="Transportation" />
                                    </LinearLayout>
                                    <!--Linear layout to display Food consumption-->
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="18dp"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginTop="5dp">

                                        <!--View to display the red color icon-->
                                        <View
                                            android:layout_width="15dp"
                                            android:layout_height="match_parent"
                                            android:background="@color/planetze_colour_3" />

                                        <!--Text view to display CFood consumption text -->
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/garet"
                                            android:id="@+id/foodConsumption"
                                            android:paddingLeft="10dp"
                                            android:text="Food Consumption" />
                                    </LinearLayout>

                                    <!--Linear layout to display Energy use-->
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="18dp"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginTop="5dp">

                                        <!--View to display the blue color icon-->
                                        <View
                                            android:layout_width="15dp"
                                            android:layout_height="match_parent"
                                            android:background="@color/teal_200" />

                                        <!--Text view to display Java text -->
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/garet"
                                            android:id="@+id/energyUse"
                                            android:paddingLeft="10dp"
                                            android:text="Energy Use" />
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Another Card view for displaying -->
                        <!-- Comparison to region and globally -->
                        <androidx.cardview.widget.CardView
                        android:id="@+id/details"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_below="@+id/cardViewGraph"
                        android:layout_marginTop="20dp"
                        android:elevation="10dp"
                        app:cardCornerRadius="10dp">

                        <!--Relative layout to display -->
                        <!-- use of programming languages -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <!--Text view to use of -->
                            <!-- programming languages text-->
                            <!--View to display the line-->

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="18dp"
                                android:layout_marginTop="18dp"
                                android:fontFamily="@font/garet"
                                android:text="Comparison of your Emissions"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="20dp"
                                android:background="@color/black" />
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="25dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="25dp"
                                android:layout_marginBottom="12dp">
                                <!--Text view to display R -->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/garet"
                                    android:id="@+id/yourEmissions"
                                    android:text="Your Emissions"
                                    android:textSize="18sp" />
                                <!--Text view to display the -->
                                <!-- percentage of programming language -->
                                <!-- used. For now default set to 0-->
                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:fontFamily="@font/garet"
                                    android:text="0"
                                    android:textAlignment="textEnd"
                                    android:textColor="@color/planetze_colour_2"
                                    android:id="@+id/yourEmissionsNumber"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />
                            </RelativeLayout>
                            <!--View to display the line-->
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:background="@color/planetze_colour_2" />
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="25dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="25dp"
                                android:layout_marginBottom="10dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/garet"
                                    android:text="Global Emissions"
                                    android:textSize="18sp" />
                                <!--Text view to display the percentage -->
                                <!-- of programming language used. -->
                                <!-- For now default set to 0-->
                                <TextView
                                    android:id="@+id/GlobalEmissions"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:fontFamily="@font/garet"
                                    android:text="0"
                                    android:textAlignment="textEnd"
                                    android:textColor="@color/planetze_colour_2"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />
                            </RelativeLayout>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:background="@color/planetze_colour_2" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <!-- Choose country to compare your global average -->
        <Spinner
            android:id="@+id/countrySpinner"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="10dp"
            android:entries="@array/location_array" />


        <!-- Comparison to National/Global Averages -->
        <TextView
            android:id="@+id/comparisonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/custom_font"
            android:text="Your emissions are 20% lower than the national average."
            android:textSize="20sp" />

        <!-- Line chart -->
        <TextView
            android:id="@+id/Linechart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/custom_font"
            android:text="Emissions Trend"
            android:textSize="20sp" />

        <org.eazegraph.lib.charts.ValueLineChart
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/chart"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:egUseCubic="true"
            app:egUseOverlapFill="true"
            app:egCurveSmoothness="0.4"
            app:egIndicatorLineColor="#FE6DA8"
            app:egLegendHeight="40dp"
            app:egShowStandardValue="true"/>

    </LinearLayout>
</ScrollView>




