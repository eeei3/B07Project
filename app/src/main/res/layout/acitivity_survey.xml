<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/custom_font"
            android:gravity="center"
            android:text="Annual Carbon Footprint"
            android:textColor="@color/teal_700"
            android:textSize="14pt"
            tools:ignore="HardcodedText" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- TextView aligned to the left and vertically centered -->

            <!-- Spinner aligned to the right and vertically centered with TextView -->
            <TextView
                android:id="@+id/textLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:fontFamily="@font/custom_font"
                android:text="Select a Country:" />

            <Spinner
                android:id="@+id/locationSpinner"
                style="@style/CustomSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/textLabel"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="112dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="-8dp"
                android:entries="@array/location_array" />
        </RelativeLayout>

        <!-- Question: Do you own or regularly use a car? -->
        <TextView
            android:id="@+id/caruseQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:padding="3dp"
            android:fontFamily="@font/custom_font"
            android:text="Do you own or regularly use a car?" />
        <RadioGroup
            android:id="@+id/radioGroupCarOwnership"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes"
                android:fontFamily="@font/custom_font"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:textSize="2.5mm"/>

            <RadioButton
                android:id="@+id/radioNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No"
                android:fontFamily="@font/custom_font"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:textSize="2.5mm"/>
        </RadioGroup>

        <!-- Additional car-related questions (initially hidden) -->
        <LinearLayout
            android:id="@+id/carQuestionsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- What type of car do you drive? -->
            <TextView
                android:id="@+id/caruseoftenQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="25dp"
                android:fontFamily="@font/custom_font"
                android:text="What type of car do you drive?" />
            <RadioGroup
                android:id="@+id/radioGroupCarUsage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:visibility="gone"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/radioGasoline"
                    style="@style/CustomRadioButton"
                    android:text="Gasoline" />

                <RadioButton
                    android:id="@+id/radioDiesel"
                    style="@style/CustomRadioButton"
                    android:text="Diesel"/>

                <RadioButton
                    android:id="@+id/radioHybrid"
                    style="@style/CustomRadioButton"
                    android:text="Hybrid" />

                <RadioButton
                    android:id="@+id/radioElectric"
                    style="@style/CustomRadioButton"
                    android:text="Electric" />

                <RadioButton
                    android:id="@+id/radioNotSure"
                    style="@style/CustomRadioButton"
                    android:text="I'm not sure" />
            </RadioGroup>

            <!-- How many kilometers/miles do you drive per year? -->
            <TextView
                android:id="@+id/carmilesQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="25dp"
                android:fontFamily="@font/custom_font"
                android:text="How many kilometers/miles do you drive per year?" />
            <RadioGroup
                android:id="@+id/radioGroupCarMiles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:visibility="gone"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/radio5000km"
                    android:layout_width="294dp"
                    android:layout_height="wrap_content"
                    android:text="Up to 5,000 km (3,000 miles)"
                    android:fontFamily="@font/custom_font"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:textSize="2.5mm" />

                <RadioButton
                    android:id="@+id/radio10000km"
                    android:layout_width="294dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/custom_font"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:text="5,000–10,000 km (3,000–6,000 miles)"
                    android:textSize="2.5mm" />

                <RadioButton
                    android:id="@+id/radio15000km"
                    android:layout_width="294dp"
                    android:layout_height="wrap_content"
                    android:text="10,000–15,000 km (6,000–9,000 miles)"
                    android:fontFamily="@font/custom_font"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:textSize="2.5mm" />

                <RadioButton
                    android:id="@+id/radio20000km"
                    android:layout_width="294dp"
                    android:layout_height="wrap_content"
                    android:text="15,000–20,000 km (9,000–12,000 miles)"
                    android:fontFamily="@font/custom_font"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:textSize="2.5mm" />

                <RadioButton
                    android:id="@+id/radio25000km"
                    android:layout_width="294dp"
                    android:layout_height="wrap_content"
                    android:text="20,000–25,000 km (12,000–15,000 miles)"
                    android:fontFamily="@font/custom_font"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:textSize="2.5mm" />

                <RadioButton
                    android:id="@+id/radio25000pluskm"
                    android:layout_width="294dp"
                    android:layout_height="wrap_content"
                    android:text="More than 25,000 km (15,000 miles)"
                    android:fontFamily="@font/custom_font"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:textSize="2.5mm" />
            </RadioGroup>

        </LinearLayout>

        <!-- Question: How often do you use public transportation (bus, train, subway)? -->
        <TextView
            android:id="@+id/ptuseQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:padding="3dp"
            android:fontFamily="@font/custom_font"
            android:text="How often do you use public transportation (bus, train, subway)?" />
        <RadioGroup
            android:id="@+id/ptUse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radioptNever"
                style="@style/CustomRadioButton"
                android:text="Never" />

            <RadioButton
                android:id="@+id/radioptOccasionally"
                style="@style/CustomRadioButton"
                android:text="Occasionally (1-2 times/week)" />

            <RadioButton
                android:id="@+id/radioptFrequently"
                android:text="Frequently (3-4 times/week)"
                style="@style/CustomRadioButton"/>

            <RadioButton
                android:id="@+id/radioptAlways"
                style="@style/CustomRadioButton"
                android:text="Always (5+ times/week)" />
        </RadioGroup>

        <!-- Question: How much time do you spend on public transport per week (bus, train, subway)? -->
        <TextView
            android:id="@+id/pttimeQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:padding="3dp"
            android:fontFamily="@font/custom_font"
            android:text="Question: How much time do you spend on public transport per week (bus, train, subway)?" />
        <RadioGroup
            android:id="@+id/radioptTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radiopt1Hour"
                style="@style/CustomRadioButton"
                android:text="Under 1 hour" />

            <RadioButton
                android:id="@+id/radiopt3Hour"
                style="@style/CustomRadioButton"
                android:text="1-3 hours" />

            <RadioButton
                android:id="@+id/radiopt5Hour"
                android:text="3-5 hours"
                style="@style/CustomRadioButton"/>

            <RadioButton
                android:id="@+id/radiopt10Hour"
                style="@style/CustomRadioButton"
                android:text="5-10 hours" />

            <RadioButton
                android:id="@+id/radiopt10plusHour"
                style="@style/CustomRadioButton"
                android:text="More than 10 hours" />
        </RadioGroup>

        <!-- How many short-haul flights (less than 1,500 km / 932 miles) have you taken in the past year? -->
        <TextView
            android:id="@+id/shortFlightQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:padding="3dp"
            android:fontFamily="@font/custom_font"
            android:text="How many short-haul flights (less than 1,500 km / 932 miles) have you taken in the past year?" />
        <RadioGroup
            android:id="@+id/radioShortFlights"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radiononeShortFlights"
                style="@style/CustomRadioButton"
                android:text="None" />

            <RadioButton
                android:id="@+id/radio2ShortFlights"
                style="@style/CustomRadioButton"
                android:text="1-2 flights" />

            <RadioButton
                android:id="@+id/radio5ShortFlights"
                android:text="3-5 flights"
                style="@style/CustomRadioButton"/>

            <RadioButton
                android:id="@+id/radio10ShortFlights"
                style="@style/CustomRadioButton"
                android:text="6-10 flights" />

            <RadioButton
                android:id="@+id/radio10plusShortFlights"
                style="@style/CustomRadioButton"
                android:text="More than 10 flights" />
        </RadioGroup>

        <!-- How many long-haul flights (more than 1,500 km / 932 miles) have you taken in the past year? -->
        <TextView
            android:id="@+id/longFlightQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:padding="3dp"
            android:fontFamily="@font/custom_font"
            android:text="How many long-haul flights (more than 1,500 km / 932 miles) have you taken in the past year?" />
        <RadioGroup
            android:id="@+id/radioLongFlights"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radiononeLongFlights"
                style="@style/CustomRadioButton"
                android:text="None" />

            <RadioButton
                android:id="@+id/radio2LongFlights"
                style="@style/CustomRadioButton"
                android:text="1-2 flights" />

            <RadioButton
                android:id="@+id/radio5LongFlights"
                android:text="3-5 flights"
                style="@style/CustomRadioButton"/>

            <RadioButton
                android:id="@+id/radio10LongFlights"
                style="@style/CustomRadioButton"
                android:text="6-10 flights" />

            <RadioButton
                android:id="@+id/radio10plusLongFlights"
                style="@style/CustomRadioButton"
                android:text="More than 10 flights" />
        </RadioGroup>

        <!-- What best describes your diet? -->
        <TextView
            android:id="@+id/dietQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:padding="3dp"
            android:fontFamily="@font/custom_font"
            android:text="What best describes your diet?" />
        <RadioGroup
            android:id="@+id/radioDiet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radioVegan"
                style="@style/CustomRadioButton"
                android:text="Vegan" />

            <RadioButton
                android:id="@+id/radioPescatarian"
                android:text="Pescatarian (fish/seafood)"
                style="@style/CustomRadioButton"/>

            <RadioButton
                android:id="@+id/radioMeatBased"
                style="@style/CustomRadioButton"
                android:text="Meat-based (eat all types of animal products)" />
        </RadioGroup>

        <!-- Additional diet related questions (initially hidden) -->
        <LinearLayout
            android:id="@+id/dietQuestionsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">
            <TextView
                android:id="@+id/animalDietQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="25dp"
                android:fontFamily="@font/custom_font"
                android:text="How often do you eat the following animal-based products?" />
            <!-- Beef -->
            <TextView
                android:id="@+id/animalBeefDietQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="50dp"
                android:fontFamily="@font/custom_font"
                android:text="Beef" />
            <RadioGroup
                android:id="@+id/radioBeefConsumption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:visibility="gone"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/radioBeefDaily"
                    style="@style/CustomRadioButton"
                    android:text="Daily" />

                <RadioButton
                    android:id="@+id/radioBeefFrequently"
                    style="@style/CustomRadioButton"
                    android:text="Frequently (3-5 times/week)"/>

                <RadioButton
                    android:id="@+id/radioBeefOccasionally"
                    style="@style/CustomRadioButton"
                    android:text="Occasionally (1-2 times/week)" />

                <RadioButton
                    android:id="@+id/radioBeefNever"
                    style="@style/CustomRadioButton"
                    android:text="Never" />
            </RadioGroup>

            <!-- Pork -->
            <TextView
                android:id="@+id/animalPorkDietQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="50dp"
                android:fontFamily="@font/custom_font"
                android:text="Pork" />
            <RadioGroup
                android:id="@+id/radioPorkConsumption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:visibility="gone"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/radioPorkDaily"
                    style="@style/CustomRadioButton"
                    android:text="Daily" />

                <RadioButton
                    android:id="@+id/radioPorkFrequently"
                    style="@style/CustomRadioButton"
                    android:text="Frequently (3-5 times/week)"/>

                <RadioButton
                    android:id="@+id/radioPorkOccasionally"
                    style="@style/CustomRadioButton"
                    android:text="Occasionally (1-2 times/week)" />

                <RadioButton
                    android:id="@+id/radioPorkNever"
                    style="@style/CustomRadioButton"
                    android:text="Never" />
            </RadioGroup>

            <!-- Chicken -->
            <TextView
                android:id="@+id/animalChickenDietQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="50dp"
                android:fontFamily="@font/custom_font"
                android:text="Chicken" />
            <RadioGroup
                android:id="@+id/radioChickenConsumption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:visibility="gone"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/radioChickenDaily"
                    style="@style/CustomRadioButton"
                    android:text="Daily" />

                <RadioButton
                    android:id="@+id/radioChickenFrequently"
                    style="@style/CustomRadioButton"
                    android:text="Frequently (3-5 times/week)"/>

                <RadioButton
                    android:id="@+id/radioChickenOccasionally"
                    style="@style/CustomRadioButton"
                    android:text="Occasionally (1-2 times/week)" />

                <RadioButton
                    android:id="@+id/radioChickenNever"
                    style="@style/CustomRadioButton"
                    android:text="Never" />
            </RadioGroup>

            <!-- Fish/Seafood -->
            <TextView
                android:id="@+id/animalFishDietQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="50dp"
                android:fontFamily="@font/custom_font"
                android:text="Fish/Seafood" />
            <RadioGroup
                android:id="@+id/radioFishConsumption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:visibility="gone"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/radioFishDaily"
                    style="@style/CustomRadioButton"
                    android:text="Daily" />

                <RadioButton
                    android:id="@+id/radioFishFrequently"
                    style="@style/CustomRadioButton"
                    android:text="Frequently (3-5 times/week)"/>

                <RadioButton
                    android:id="@+id/radioFishOccasionally"
                    style="@style/CustomRadioButton"
                    android:text="Occasionally (1-2 times/week)" />

                <RadioButton
                    android:id="@+id/radioFishNever"
                    style="@style/CustomRadioButton"
                    android:text="Never" />
            </RadioGroup>
        </LinearLayout>

        <!-- How often do you waste food or throw away uneaten leftovers? -->
        <TextView
            android:id="@+id/foodWasteQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:padding="3dp"
            android:fontFamily="@font/custom_font"
            android:text="How often do you waste food or throw away uneaten leftovers?" />
        <RadioGroup
            android:id="@+id/radioFoodWaste"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radioFoodWasteNever"
                style="@style/CustomRadioButton"
                android:text="Never" />

            <RadioButton
                android:id="@+id/radioFoodwasteRarely"
                style="@style/CustomRadioButton"
                android:text="Rarely" />

            <RadioButton
                android:id="@+id/radioFoodWasteOccasionally"
                android:text="Occasionally"
                style="@style/CustomRadioButton"/>

            <RadioButton
                android:id="@+id/radioFoodWasteFrequently"
                style="@style/CustomRadioButton"
                android:text="Frequently" />
        </RadioGroup>

        <!-- What type of home do you live in? -->
        <TextView
            android:id="@+id/housingQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:padding="3dp"
            android:fontFamily="@font/custom_font"
            android:text="What type of home do you live in?" />
        <RadioGroup
            android:id="@+id/radioHousing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radioHousingDetached"
                style="@style/CustomRadioButton"
                android:text="Detached house" />

            <RadioButton
                android:id="@+id/radioHousingSemiDetached"
                style="@style/CustomRadioButton"
                android:text="Semi-detached house" />

            <RadioButton
                android:id="@+id/radioHousingTownhouse"
                android:text="Townhouse"
                style="@style/CustomRadioButton"/>

            <RadioButton
                android:id="@+id/radioHousingCondo"
                style="@style/CustomRadioButton"
                android:text="Condo/Apartment" />

            <RadioButton
                android:id="@+id/radioHousingOther"
                style="@style/CustomRadioButton"
                android:text="Other" />
        </RadioGroup>

        <!-- How many people live in your household? -->
        <TextView
            android:id="@+id/housingPeopleQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:padding="3dp"
            android:fontFamily="@font/custom_font"
            android:text="How many people live in your household?" />
        <RadioGroup
            android:id="@+id/radioHousingPeople"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radioHousingPeople1"
                style="@style/CustomRadioButton"
                android:text="1" />

            <RadioButton
                android:id="@+id/radioHousingPeople2"
                style="@style/CustomRadioButton"
                android:text="2" />

            <RadioButton
                android:id="@+id/radioHousingPeople3"
                android:text="3-4"
                style="@style/CustomRadioButton"/>

            <RadioButton
                android:id="@+id/radioHousingPeople5"
                style="@style/CustomRadioButton"
                android:text="5 or more" />
        </RadioGroup>

        <!-- What is the size of your home? -->
        <TextView
            android:id="@+id/housingSizeQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:padding="3dp"
            android:fontFamily="@font/custom_font"
            android:text="What is the size of your home?" />
        <RadioGroup
            android:id="@+id/radioHousingSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radioHousingSizeSmall"
                style="@style/CustomRadioButton"
                android:text="Under 1000 sq. ft." />

            <RadioButton
                android:id="@+id/radioHousingSizeMedium"
                style="@style/CustomRadioButton"
                android:text="1000-2000 sq. ft." />

            <RadioButton
                android:id="@+id/radioHousingSizeLarge"
                android:text="Over 2000 sq. ft."
                style="@style/CustomRadioButton"/>
        </RadioGroup>

        <!-- What type of energy do you use to heat your home? -->
        <TextView
            android:id="@+id/energyQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:padding="3dp"
            android:fontFamily="@font/custom_font"
            android:text="What type of energy do you use to heat your home?" />
        <RadioGroup
            android:id="@+id/radioEnergy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radioEnergyNG"
                style="@style/CustomRadioButton"
                android:text="Natural Gas" />

            <RadioButton
                android:id="@+id/radioEnergyElectricity"
                style="@style/CustomRadioButton"
                android:text="Electricity" />

            <RadioButton
                android:id="@+id/radioEnergyOil"
                android:text="Oil"
                style="@style/CustomRadioButton"/>

            <RadioButton
                android:id="@+id/radioEnergyPropane"
                style="@style/CustomRadioButton"
                android:text="Propane" />

            <RadioButton
                android:id="@+id/radioenergyWood"
                style="@style/CustomRadioButton"
                android:text="Wood" />

            <RadioButton
                android:id="@+id/radioEnergyOther"
                style="@style/CustomRadioButton"
                android:text="Other" />
        </RadioGroup>

        <!-- What is your average monthly electricity bill? -->
        <TextView
            android:id="@+id/billQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:padding="3dp"
            android:fontFamily="@font/custom_font"
            android:text="What is your average monthly electricity bill?" />
        <RadioGroup
