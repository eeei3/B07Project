<resources>
    <!-- Base application theme -->
    <style name="Theme.PlantzeApp" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryDark">@color/teal_700</item>
        <item name="colorAccent">@color/purple_500</item>
    </style>

    <!-- Custom Radio Button Style -->
    <style name="CustomRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <!-- Set the color of the radio button circle -->

        <!-- Set text size, font, and color -->
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/custom_font</item>

        <!-- Set padding around the text and radio circle -->
        <item name="android:padding">3dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_width">363dp</item>
        <item name="android:layout_height">wrap_content</item>

        <!-- Adjust scale if necessary -->
        <item name="android:scaleX">0.8</item>
        <item name="android:scaleY">0.8</item>
    </style>

    <style name="CustomSpinner" parent="TextAppearance.AppCompat.Medium">
        <!-- Set text color, size, and font family -->
        <item name="android:textSize">15dp</item>
        <item name="android:fontFamily">@font/garet</item>
        <item name="android:textColor">#757575</item>
    </style>


</resources>
